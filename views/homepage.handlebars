<header>
    <div class="container-fluid profileBar">
        <!--NAVIGATION-->
        <div class="row">
            <div class="col-xs-12 col-md-11 col-sm-10">
                <img class="logo" id="logo2" src="/images/logo2 copy.png" class="img-fluid height: auto;"
                    alt="Responsive image">
            </div>

            <div class=" col-xs-12 col-md-1 col-sm-2">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <button type="button" class="btn btn-outline-light" data-bs-toggle="modal"
                            data-bs-target="#logInModal">
                            Log In
                        </button>
                        {{> login}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

{{!-- Hero section --}}
<div class="container-fluid hero-section">
    <div class="row">
        <div class="col-xs-12  col-md-12 text-center">
            <img class="logo" id="main-logo" src="/images/logo1 copy.png" class="img-fluid height: auto;">
        </div>

        <div class="extended col-md-12 text-center">
            <div class="p-3  signup-card mb-2  bg-transparent text-dark card w-50 border border-2 rounded-start">
                <div class="card-body">
                    <h5 class="card-title white">CREATE AN ACCOUNT AND START PREPPING TODAY!</h5>
                    <p class="card-text white">Minimal Prepper makes it easy and stress-free to prepare for any
                        disaster or emergency.</p>
                    {{!-- button trigger for get started --}}
                    <button type="button" class="btn btn-outline-light" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Get Started
                    </button>
                    {{> getstarted}}
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid main-section text-center">
    <div class="row">
        <div class="col-xs-12  col-md-12 col-lg-8 blog-section text-center">
            <img src="images/helpfularticle.png" id="title1" class="img-fluid height: auto;" alt="Responsive image">
            <div class="scrollbar">
                {{> articles-homepage}}
            </div>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-4 tips-section text-center">

            <img src="/images/tips2.png" id="title2" class="img-fluid height: auto;" alt="Responsive image">
            <div class="scrollbar2">
                <div class="card tip-card mx-auto" style="width: 27rem;">
                    <div class="card-header">
                        Featured
                    </div>
                    {{> helpfultips}}

                </div>
            </div>
        </div>
    </div>
</div>

