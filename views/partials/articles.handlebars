{{#if articles.length}}
    {{#each articles as |article|}}
        <div class=" text-center card-padding card text-dark bg-light mb-3 mx-auto" style="max-width: 58rem;">
            <div class="card-header">{{ article.header }} {{vote_count}} {{format_plural "point" vote_count}} on {{format_date created_at}}</div>
            <div class="card-body">
                <h5 class="card-title">{{ article.title }}
                    <a href="/articles/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                </h5>
                <p class="card-text">{{ article.article_text }}</p>
            </div>
        </div>
    {{/each}}
{{/if}}

<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>